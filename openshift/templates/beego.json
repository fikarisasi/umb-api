{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "umb-api",
    "annotations": {
      "description": "A new UMB API written in Golang",
      "tags": "umb,golang",
      "iconClass": "icon-go-gopher"
    }
  },
  "labels": {
      "template": "umb-api",
      "app": "umb-api"
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "umb-api",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "umb-api"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "umb-api"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "to": {
          "kind": "Service",
          "name": "umb-api"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "umb-api",
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "umb-api",
        "annotations": {
          "description": "Defines how to build the application"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "env": [
              {
                "name": "postgresql_host",
                "value": "postgresql.indosat-umb-poc.svc.cluster.local"
              },
              {
                "name": "postgresql_schema",
                "value": "default"
              },
              {
                "name": "postgresql_database-user",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "database-user",
                    "name": "postgresql"
                  }
                }
              },
              {
                "name": "postgresql_database-password",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "database-password",
                    "name": "postgresql"
                  }
                }
              },
              {
                "name": "postgresql_database-name",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "database-name",
                    "name": "postgresql"
                  }
                }
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "umb-api:latest"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          }
        ],
        "postCommit": {
          "script": "go test -v ./..."
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "umb-api",
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "umb-api"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "umb-api:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "umb-api"
        },
        "template": {
          "metadata": {
            "name": "umb-api",
            "labels": {
              "name": "umb-api"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "umb-api",
                "image": "umb-api",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "env": [
                  {
                    "name": "postgresql_host",
                    "value": "postgresql.indosat-umb-poc.svc.cluster.local"
                  },
                  {
                    "name": "postgresql_schema",
                    "value": "default"
                  },
                  {
                    "name": "postgresql_database-user",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-user",
                        "name": "postgresql"
                      }
                    }
                  },
                  {
                    "name": "postgresql_database-password",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-password",
                        "name": "postgresql"
                      }
                    }
                  },
                  {
                    "name": "postgresql_database-name",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "database-name",
                        "name": "postgresql"
                      }
                    }
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "https://github.com/fikarisasi/umb-api.git"
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch",
      "value": "deployment-preparation-withpgsql"
    },
    {
      "name": "CONTEXT_DIR",
      "description": "Set this to the relative path to your project if it is not in the root of your repository"
    },
    {
      "name": "APPLICATION_DOMAIN",
      "description": "The exposed hostname that will route to the Beego service",
      "value": "umb-api.office.corp.indosat.com"
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "description": "Github trigger secret.  A difficult to guess string encoded as part of the webhook URL.  Not encrypted.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    }
  ]
}
